<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="calendarStyleMirror">
        <item name="mcv_dateTextAppearance">@style/calendarTextMirror</item>
        <item name="mcv_headerTextAppearance">@style/calendarTextMirror</item>
        <item name="mcv_weekDayTextAppearance">@style/calendarTextMirror</item>
        <item name="mcv_selectionColor">#00b30c</item>
    </style>

    <style name="memoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#303030</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:background">#000000</item>
        <item name="android:textAppearance">@style/calendarTextMirror</item>
    </style>

    <style name="testTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#f2ff00</item>
        <item name="colorAccent">#00fbff</item>
        <item name="android:background">#00ff04</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAppearance">@style/calendarTextMirror</item>
    </style>

    <style name="calendarTextMirror">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>